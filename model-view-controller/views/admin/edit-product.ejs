<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %> 

    <main class="main-container">
        <form 
            action="<%= editing ? '/admin/edit-product' : '/admin/add-product' %>" 
            method="POST" 
            class="product-form">

            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" placeholder="Product Title"  value="<%= editing ? product.title : '' %>">
            </div>

            <div class="form-control">
                <label for="description">Description</label>
                <textarea rows="5" name="description" id="description" placeholder="Product Description"><%= editing ? product.description : '' %></textarea>
            </div>

            <div class="form-control">
                <label for="price">Price</label>
                <input 
                    type="number" 
                    name="price" 
                    id="price" 
                    placeholder="Product Price" 
                    value="<%= editing ? product.price : '' %>">
            </div>

            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input 
                    type="text" 
                    name="imageUrl" 
                    id="imageUrl" 
                    placeholder="Product Image" 
                    value="<%= editing ? product.imageUrl : '' %>">
            </div>

            <% if (editing) { %> 
                <input type="hidden" name="productId" value="<%= product.id %>">
            <% } %> 

            <button type="submit">
                <%= editing ? 'Update' : 'Add' %> Product 
            </button>
        </form>
    </main>

<%- include('../includes/end.ejs') %> 