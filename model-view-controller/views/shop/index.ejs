<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %> 

    <main class="main-container">
        <h1>My Products - Index</h1>
        <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (const product of prods) { %>
                <div class="card">
                    <span class="card__title"><%= product.title %></span>
                    <img src="https://images.unsplash.com/photo-1598128558393-70ff21433be0?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=422&q=80" alt="an item" class="card__image">
                    <span class="card__price">$1900</span>
                    <p class="card__description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quia temporibus pariatur magnam repellendus, quasi voluptatem!</p>
                </div>
            <% } %>
        </div>
        <% } else { %>

            <h4>No products available at this time</h4>

        <% } %>
    </main>

<%- include('../includes/end.ejs') %> 