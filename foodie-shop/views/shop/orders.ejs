<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    
    <%- include('../includes/navigation.ejs') %> 

    <main class="main-container">
        <% if (orders.length == 0) { %> 
            <h2>Nothing here!</h2>
        <% } else { %>
            <div class="orders">
            <% orders.forEach((order, index) => { %>
                <div class="order">
                    <span class="order-title">Order #<%= index+1 %>: <%= order._id %></span>
                    <ul class="products">
                    <% order.products.forEach(product => { %>
                        <li class="product"> <%= product.product.title %> (<%= product.quantity %>) </li>
                    <% }) %>
                </ul>
                <span>Total Price: <%= totalPrices[index] %></span>
                </div>
            <% }) %>
            </div>
        <% } %>
    </main>

<%- include('../includes/end.ejs') %> 